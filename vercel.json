{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/.*",
      "dest": "api/index.js"
    },
    {
      "src": "/images/.*",
      "dest": "client/public/images/$1"
    },
    {
      "src": "/.*\\.(jsx?|css|json)$",
      "dest": "client/$1"
    },
    {
      "src": "/.*\\.(png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot)$",
      "dest": "client/public/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/.*",
      "dest": "client/index.html"
    }
  ]
}