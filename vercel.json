{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/images/(.*)",
      "dest": "/client/public/images/$1"
    },
    {
      "src": "/(.*\\.(?:css|js|json|png|jpg|jpeg|gif|svg|ico))",
      "dest": "/client/$1"
    },
    {
      "src": "/(.*)html",
      "dest": "/client/$1.html"
    },
    {
      "src": "/(.*)",
      "dest": "/client/index.html"
    }
  ]
}