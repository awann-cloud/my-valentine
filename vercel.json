{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { 
      "source": "/api/(.*)", 
      "destination": "/api/index.js" 
    },
    { 
      "source": "/images/(.*)", 
      "destination": "/client/public/images/$1" 
    },
    { 
      "source": "/", 
      "destination": "/client/index.html" 
    },
    { 
      "source": "/(.*)", 
      "destination": "/client/$1" 
    }
  ]
}